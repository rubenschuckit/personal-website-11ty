---
layout: layouts/base.njk
section: post
---
{% set css %}
{% include "assets/css/post.css" %}
{% include "assets/css/syntax.css" %}
{% endset %}
<style>
  {{css | cssmin | safe}}
</style>

<article class="container-md pt-3 pb-3" style="max-width: 750px">
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
    </small>
  </p>

  {{ layoutContent | safe }}

</article>
