<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} lang="en">

	{% include "components/head.njk" %}

	<body>

		<header>
			{% include "components/nav.njk" %}
		</header>

		<main>
			{{ layoutContent | safe }}
		</main>

		<script>
			if (window.netlifyIdentity) {
				window
					.netlifyIdentity
					.on("init", user => {
						if (!user) {
							window
								.netlifyIdentity
								.on("login", () => {
									document.location.href = "/admin/";
								});
						}
					});
			}
		</script>

	</body>

</html>