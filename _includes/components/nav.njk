{% set css %}
{% include "assets/css/nav.css" %}
{% endset %}
<style>
  {{css | cssmin | safe}}
</style>
{% set navPages = collections.all | eleventyNavigation %}

<nav>
  <div class="d-flex align-content-center myNav">
    <div class="brand">Ruben Schuckit</div>
    {%- for entry in navPages %}
      <div class="linkContainer d-flex align-items-center">
        <a class="navLink {% if entry.url == page.url %}active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}
        {%- endfor %}
      </div>
    </div>
  </nav>